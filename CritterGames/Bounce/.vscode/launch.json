    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run watch",
            "name": "WebServer",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "sourceMaps": true,
            "url": "http://localhost:10001",
            "webRoot": "${workspaceFolder}/dist"
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": ["WebServer", "Chrome"]
        }
    ]
}